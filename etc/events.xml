<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">

    <!-- account -->

    <event name="ess_amazon_account_created_setting_manage_fba_inventory">
        <observer name="amazonmcf_observer_account_created"
                  instance="M2E\AmazonMcf\Observer\Account\Created"/>
    </event>

    <event name="ess_amazon_account_updated_setting_manage_fba_inventory">
        <observer name="amazonmcf_observer_account_updated"
                  instance="M2E\AmazonMcf\Observer\Account\Updated"/>
    </event>

    <event name="ess_amazon_account_deleted">
        <observer name="amazonmcf_observer_account_deleted"
                  instance="M2E\AmazonMcf\Observer\Account\Deleted"/>
    </event>

    <!-- product -->

    <event name="ess_amazon_fba_product_source_items_updated">
        <observer name="amazonmcf_observer_product_updated"
                  instance="M2E\AmazonMcf\Observer\Product\Updated"/>
    </event>

    <event name="ess_amazon_fba_product_deleted">
        <observer name="amazonmcf_observer_product_deleted"
                  instance="M2E\AmazonMcf\Observer\Product\Deleted"/>
    </event>

    <!-- order -->

    <event name="ess_magento_order_created">
        <observer name="amazonmcf_observer_magento_order_created"
                  instance="M2E\AmazonMcf\Observer\Order\MagentoOrderCreated"/>
    </event>

    <event name="ess_order_invoice_created">
        <observer name="amazonmcf_observer_order_paid"
                  instance="M2E\AmazonMcf\Observer\Order\OrderPaid"/>
    </event>

    <!-- magento order -->

    <event name="sales_model_service_quote_submit_success">
        <observer name="amazonmcf_observer_magento_order_quote_submit_success"
                  instance="M2E\AmazonMcf\Observer\Magento\Order\QuoteSubmitSuccess"/>
    </event>

    <event name="sales_order_invoice_pay">
        <observer name="amazonmcf_observer_magento_order_invoice_pay"
                  instance="M2E\AmazonMcf\Observer\Magento\Order\InvoicePay"/>
    </event>

    <event name="sales_order_save_after">
        <observer name="amazonmcf_observer_magento_order_save_after"
                  instance="M2E\AmazonMcf\Observer\Magento\Order\SaveAfter"/>
    </event>

    <!-- cron keep alive -->

    <event name="m2e_mcf_cron_keep_alive_activate">
        <observer name="amazonmcf_cron_keep_alive_activate"
                  instance="M2E\AmazonMcf\Model\Cron\Strategy\Observer\KeepAlive"/>
    </event>

    <event name="model_save_before">
        <observer name="amazonmcf_cron_keep_alive_model_save"
                  instance="M2E\AmazonMcf\Model\Cron\Strategy\Observer\KeepAlive"/>
    </event>

    <event name="model_load_before">
        <observer name="amazonmcf_cron_keep_alive_model_load"
                  instance="M2E\AmazonMcf\Model\Cron\Strategy\Observer\KeepAlive"/>
    </event>

    <event name="core_collection_abstract_load_before">
        <observer name="amazonmcf_cron_keep_alive_collection_load"
                  instance="M2E\AmazonMcf\Model\Cron\Strategy\Observer\KeepAlive"/>
    </event>

    <!-- cron progress -->

    <event name="m2e_mcf_cron_progress_start">
        <observer name="amazonmcf_cron_progress_start"
                  instance="M2E\AmazonMcf\Model\Cron\Strategy\Observer\Progress"/>
    </event>

    <event name="m2e_mcf_cron_progress_set_percentage">
        <observer name="amazonmcf_cron_progress_set_percentage"
                  instance="M2E\AmazonMcf\Model\Cron\Strategy\Observer\Progress"/>
    </event>

    <event name="m2e_mcf_cron_progress_set_details">
        <observer name="amazonmcf_cron_progress_set_details"
                  instance="M2E\AmazonMcf\Model\Cron\Strategy\Observer\Progress"/>
    </event>

    <event name="m2e_mcf_cron_progress_stop">
        <observer name="amazonmcf_cron_progress_stop" instance="M2E\AmazonMcf\Model\Cron\Strategy\Observer\Progress"/>
    </event>

</config>
