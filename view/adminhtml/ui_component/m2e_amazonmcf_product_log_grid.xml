<?xml version="1.0" ?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">

    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">
                m2e_amazonmcf_product_log_grid.m2e_amazonmcf_product_log_grid_data_source
            </item>
            <item name="deps" xsi:type="string">
                m2e_amazonmcf_product_log_grid.m2e_amazonmcf_product_log_grid_source
            </item>
        </item>
        <item name="spinner" xsi:type="string">m2e_amazonmcf_product_log_grid_columns</item>
    </argument>

    <dataSource name="m2e_amazonmcf_product_log_grid_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">
                Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider
            </argument>
            <argument name="name" xsi:type="string">m2e_amazonmcf_product_log_grid_source</argument>
            <argument name="primaryFieldName" xsi:type="string">id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/provider</item>
                    <item name="update_url" path="mui/index/render" xsi:type="url"/>
                    <item name="storageConfig" xsi:type="array">
                        <item name="indexField" xsi:type="string">id</item>
                    </item>
                    <item name="filter_url_params" xsi:type="array">
                        <item name="mcf_product_id" xsi:type="string">*</item>
                    </item>
                </item>
            </argument>
        </argument>
    </dataSource>

    <listingToolbar>
        <filters name="listing_filters"/>
        <bookmark name="bookmarks"/>
        <paging name="listing_paging"/>
    </listingToolbar>

    <columns name="m2e_amazonmcf_product_log_grid_columns">

        <settings>
            <childDefaults>
                <param name="draggable" xsi:type="boolean">false</param>
            </childDefaults>
        </settings>

        <!--  column name from provider  -->
        <column name="id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" translate="true" xsi:type="string">ID</item>
                    <item name="visible" xsi:type="boolean">false</item>
                </item>
            </argument>
        </column>

        <column name="create_date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" translate="true" xsi:type="string">Creation Date</item>
                    <item name="filter" xsi:type="string">dateRange</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/columns/date</item>
                    <item name="sortOrder" xsi:type="number">10</item>
                </item>
            </argument>
        </column>

        <column name="mcf_product_id" class="M2E\AmazonMcf\UI\Product\Log\Column\McfProductId">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" translate="true" xsi:type="string">MCF Product ID</item>
                    <item name="filter" xsi:type="string">textRange</item>
                    <item name="bodyTmpl" xsi:type="string">ui/grid/cells/html</item>
                    <item name="sortOrder" xsi:type="number">30</item>
                </item>
            </argument>
        </column>

        <column name="magento_product_id" class="M2E\AmazonMcf\UI\Product\Log\Column\MagentoProductId">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" translate="true" xsi:type="string">Magento Product ID</item>
                    <item name="filter" xsi:type="string">textRange</item>
                    <item name="bodyTmpl" xsi:type="string">ui/grid/cells/html</item>
                    <item name="sortOrder" xsi:type="number">40</item>
                </item>
            </argument>
        </column>

        <column name="message">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" translate="true" xsi:type="string">Message</item>
                    <item name="filter" xsi:type="string">text</item>
                    <item name="sortOrder" xsi:type="number">50</item>
                </item>
            </argument>
        </column>

        <column name="initiator" class="M2E\AmazonMcf\UI\Log\Column\Initiator">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" translate="true" xsi:type="string">Initiator</item>
                    <item name="sortOrder" xsi:type="number">60</item>
                </item>
            </argument>
            <settings>
                <options class="M2E\AmazonMcf\UI\Log\Select\Initiator"/>
                <filter>select</filter>
                <dataType>select</dataType>
            </settings>
        </column>

        <column name="severity" class="M2E\AmazonMcf\UI\Log\Column\Severity">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" translate="true" xsi:type="string">Type</item>
                    <item name="bodyTmpl" xsi:type="string">ui/grid/cells/html</item>
                    <item name="sortOrder" xsi:type="number">70</item>
                </item>
            </argument>
            <settings>
                <options class="M2E\AmazonMcf\UI\Log\Select\Severity"/>
                <filter>select</filter>
                <dataType>select</dataType>
            </settings>
        </column>

    </columns>
</listing>
